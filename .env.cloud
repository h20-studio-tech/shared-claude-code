# Claude Code UI Cloud - Environment Configuration

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server port (default: 3000)
PORT=3000

# Node environment (development/production)
NODE_ENV=production

# Enable cloud mode with session sharing
CLOUD_MODE=true

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# JWT secret for authentication (REQUIRED - generate a secure random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random

# Optional API key for additional security layer
# If set, all API requests must include this key in the Authorization header
API_KEY=

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Database type (sqlite/postgresql)
DATABASE_TYPE=sqlite

# SQLite database file path (for SQLite)
DATABASE_PATH=./server/database/cloud.db

# PostgreSQL connection string (for PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/claude_code_ui

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================

# Redis URL for session storage and caching
# REDIS_URL=redis://localhost:6379

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================

# SMTP settings for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=Claude Code UI <noreply@yourapp.com>

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================

# Maximum file upload size in MB (default: 5)
MAX_UPLOAD_SIZE=5

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# ==========================================
# RATE LIMITING (Optional)
# ==========================================

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS CONFIGURATION
# ==========================================

# Allowed origins for CORS (comma-separated)
# Leave empty to allow all origins (development only)
CORS_ORIGINS=

# ==========================================
# SESSION CONFIGURATION
# ==========================================

# Session timeout in minutes (default: 24 hours)
SESSION_TIMEOUT=1440

# Maximum sessions per user (default: 10)
MAX_SESSIONS_PER_USER=10

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log level (error/warn/info/debug)
LOG_LEVEL=info

# Enable access logging
ACCESS_LOG=true

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================

# Enable public session browsing
ENABLE_PUBLIC_BROWSING=true

# Enable user registration
ENABLE_REGISTRATION=true

# Enable session sharing
ENABLE_SESSION_SHARING=true

# Enable project collaboration
ENABLE_PROJECT_COLLABORATION=true

# ==========================================
# ANALYTICS (Optional)
# ==========================================

# Google Analytics tracking ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# ==========================================
# BACKUP CONFIGURATION (Optional)
# ==========================================

# Automatic backup settings
# BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket
# BACKUP_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Vite dev server port (development only)
VITE_PORT=3001

# Enable debug mode
DEBUG=false

# Disable authentication (development only - NEVER use in production)
# DISABLE_AUTH=false